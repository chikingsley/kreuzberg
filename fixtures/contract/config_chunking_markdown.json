{
	"id": "config_chunking_markdown",
	"description": "Tests markdown-aware chunker type",
	"tags": ["contract", "config", "chunking"],
	"document": {
		"path": "pdf/fake_memo.pdf"
	},
	"extraction": {
		"method": "sync",
		"input_type": "file",
		"config": {
			"chunking": {
				"chunker_type": "markdown",
				"max_chars": 500,
				"max_overlap": 50
			}
		}
	},
	"assertions": {
		"expected_mime": "application/pdf",
		"min_content_length": 10,
		"chunks": {
			"min_count": 1,
			"each_has_content": true
		}
	},
	"skip": {
		"requires_feature": ["chunking"]
	}
}
